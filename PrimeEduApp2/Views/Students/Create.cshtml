@model PrimeEduApp2.ViewModels.StudentFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Students", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Student.FirstName)
        @Html.TextBoxFor(model => model.Student.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Student.LastName)
        @Html.TextBoxFor(model => model.Student.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Student.ClassroomID)
        @Html.DropDownListFor(model => model.Student.ClassroomID, new SelectList(Model.Classrooms, "ID", "ClassroomName"), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default"> Save </button>
}